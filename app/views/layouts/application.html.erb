<!DOCTYPE html>
<html>
  <head>
    <title>pixAPI</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="icon" type="image/png" href="">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>
    <link href="https://fonts.googleapis.com/css?family=Dancing+Script" rel="stylesheet">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="ui sidebar vertical left inverted menu">
      <img class="ui medium circular image" src="/images/wireframe/square-image.png">
      <a class="item" href="/">Home</a>
      <a class="item" href="/profile">Profile</a>
      <a class="item" href="/gallery">Gallery</a>
      <a class="item" href="/faq">FAQ</a>
      <a class="item" href="/signout">Sign Out</a>
    </div>
    
    <div class="ui basic icon top fixed menu" style= "background-color: #2D93AD;">
      <a id="toggle" class="item">
        <i class="sidebar icon"></i>
        Menu
      </a>
      <div class="ui fluid category search">
        <div class="ui icon input">
          <input class="prompt" type="text" placeholder="SEARCH">
          <i class="search icon"></i>
        </div>
        <div class="results">
        </div>
      </div>
   </div>
   
    <div id="content">
      <!-- Site content !-->
<!--      temporary fix: margin top set to 10%-->
      <%= yield %>
    </div>

    <!-- Scroll to Top Button-->
      <a class="scroll-to-top rounded" href="#page-top">
        <i class="fa fa-angle-up"></i>
      </a>

    <script>
      $('#toggle').click(function(){
        $('.ui.sidebar').sidebar('toggle');
      });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>
  </body>
</html>
